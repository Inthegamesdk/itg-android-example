<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="56dp"
    android:layout_height="64dp"
    android:layoutDirection="locale"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/extraInfoContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:layout_marginLeft="2dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="1dp">

        <LinearLayout
            android:id="@+id/timerView"
            android:focusable="false"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@android:color/white"
            android:gravity="bottom"
            android:layout_marginEnd="2dp"
            android:layout_gravity="bottom|center_horizontal"
            android:visibility="visible">
            <TextView
                android:focusable="false"
                android:layout_marginLeft="1dp"
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/titillium"
                android:textSize="13sp"
                android:textColor="@android:color/white"
                android:text="40"/>
            <TextView
                android:focusable="false"
                android:layout_marginLeft="2dp"
                android:id="@+id/timerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="7sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/titillium"
                android:text="שניות"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="2dp"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLevelLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/level_label"
                    android:textColor="@android:color/white"
                    android:textSize="7sp"
                    android:fontFamily="@font/titillium" />

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="6"
                    android:textColor="@android:color/white"
                    android:textSize="7sp"
                    android:fontFamily="@font/titillium" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="26dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCreditsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/points_label"
                    android:textColor="@android:color/white"
                    android:textSize="7sp"
                    android:fontFamily="@font/titillium"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvCredits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25000"
                    android:textColor="@android:color/white"
                    android:textSize="7sp"
                    android:fontFamily="@font/titillium"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvExPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5040"
                android:textColor="@android:color/white"
                android:textSize="8sp"
                android:visibility="gone"
                android:fontFamily="@font/titillium"/>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itg_bottom_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/userAreaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:background="@drawable/button_answer_selector"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="2dp"
                android:paddingTop="0dp"
                android:paddingRight="2dp"
                android:paddingBottom="1dp"
                android:textColor="@android:color/white"
                android:textSize="7sp"
                android:text="@string/account_label"
                android:textAllCaps="false"
                android:fontFamily="@font/titillium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/itg_bottom_btn_center"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itg_bottom_btn_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="|ֿֿ"
                android:textColor="@android:color/white"
                android:textSize="7sp"
                android:fontFamily="@font/titillium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toLeftOf="@id/closeButton"
                app:layout_constraintLeft_toRightOf="@id/userAreaButton"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_answer_selector"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginLeft="1dp"
                android:layout_marginRight="1dp"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingLeft="2dp"
                android:paddingTop="0dp"
                android:paddingRight="2dp"
                android:paddingBottom="1dp"
                android:textColor="@android:color/white"
                android:textSize="7sp"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/itg_bottom_btn_center"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/titillium"
                android:text="@string/close_label" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</LinearLayout>