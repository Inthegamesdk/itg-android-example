<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="32dp"
    android:layout_gravity="top|right">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/notice_background"
        android:layoutDirection="ltr"
        android:paddingLeft="12dp"
        android:paddingRight="10dp">
        <ImageView
            android:id="@+id/iconWin"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_point_score_yellow"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"/>
        <ImageView
            android:id="@+id/iconLose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/ic_warning"
            android:layout_gravity="center_vertical"
            android:scaleType="fitCenter"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="8dp"
            android:gravity="center"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/textContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:orientation="vertical"
                android:visibility="visible">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CONGRATULATIONS!"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/tvPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="+500 pts"
                    android:textStyle="bold"
                    android:textSize="13dp"
                    android:textColor="@color/yellowITG"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="X points for 'question name test'"
                android:textStyle="bold"
                android:textSize="10dp"
                android:layout_marginTop="2dp"
                android:maxLines="2"
                android:textColor="@android:color/white"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/pointsContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:orientation="horizontal"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tvScoreTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notice_total_score"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:textColor="@android:color/white"/>
                <TextView
                    android:id="@+id/tvTotalPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="8dp"
                    android:text="1204,5"
                    android:textStyle="bold"
                    android:textSize="21dp"
                    android:textColor="@color/yellowITG"/>
            </LinearLayout>
        </LinearLayout>
        <ImageButton
            android:id="@+id/closeButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="8dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/close"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:background="@drawable/button_circle_focus_selector"
            android:focusable="true"
            android:layout_gravity="top"/>
    </LinearLayout>
</LinearLayout>