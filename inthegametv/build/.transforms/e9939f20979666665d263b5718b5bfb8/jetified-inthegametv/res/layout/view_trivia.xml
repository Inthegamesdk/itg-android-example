<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="204dp"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:layout_marginLeft="50dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/poll_background"
        android:layoutDirection="ltr"
        android:layout_gravity="bottom"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/mainButton"
            android:orientation="horizontal"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:padding="10dp"
            android:layout_margin="13dp"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:background="@drawable/button_circle_selector"
            android:gravity="center"
            android:focusable="true"
            android:nextFocusLeft="@id/mainButton"
            android:nextFocusDown="@id/mainButton"
            android:nextFocusUp="@id/mainButton">

            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@android:color/white"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/close"
                android:scaleType="centerInside"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/errorIcon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_server_error"
                android:scaleType="centerInside"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/timerView"
                android:orientation="vertical"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="2dp"
                android:tint="@android:color/white"
                android:scaleType="centerInside"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:visibility="visible">
                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="45m"/>
                <TextView
                    android:id="@+id/timerText2"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="SEC"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pointsView"
                android:orientation="vertical"
                android:layout_width="50dp"
                android:layout_height="44dp"
                android:tint="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:visibility="gone">
                <TextView
                    android:id="@+id/totalText"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/yellowITG"
                    android:text="@string/total_points_short"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/pointsText"
                        android:layout_width="wrap_content"
                        android:layout_height="14dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/yellowITG"
                        android:text="3200,5"/>
                <TextView
                    android:id="@+id/ptsText"
                    android:layout_width="wrap_content"
                    android:layout_height="14dp"
                    android:textAlignment="center"
                    android:layout_marginStart="1dp"
                    android:gravity="center"
                    android:textSize="6sp"
                    android:textStyle="bold"
                    android:textColor="@color/yellowITG"
                    android:text="@string/points_short"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/questionContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:gravity="center"
                android:visibility="visible">
                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:textAlignment="textStart"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:text="question"/>

                <LinearLayout
                    android:id="@+id/container"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="fill_horizontal"
                    android:layout_height="32dp" >
                    <TextView
                        android:id="@+id/tvResult"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:textAlignment="textStart"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:textColor="@color/yellowITG"
                        android:maxLines="2"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:text="Answer result"
                        android:visibility="gone"/>
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/scroller"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/scrollContainer"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:gravity="fill_horizontal"
                        android:layout_height="match_parent" />
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/flipContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:background="@color/flipPromotionBackgroundColor"
                android:visibility="gone"
                android:gravity="center">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/errorContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/yellowITG"
                    android:layout_gravity="center_vertical"
                    android:text="@string/error_answer" />
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:id="@+id/extraInfoContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/tvCredits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="120"/>
            <TextView
                android:id="@+id/tvExPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="5040"/>

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="6"/>
            <Button
                android:id="@+id/userAreaButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="User Area" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/smallCloseButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/close"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:background="@drawable/button_circle_focus_selector"
            android:focusable="true"
            android:layout_gravity="top"/>
    </LinearLayout>
</LinearLayout>