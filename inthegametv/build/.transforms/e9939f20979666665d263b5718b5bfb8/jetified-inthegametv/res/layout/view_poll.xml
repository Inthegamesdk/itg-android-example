<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="284dp"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:layout_marginLeft="200dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@drawable/poll_background"
        android:layoutDirection="ltr"
        android:layout_gravity="bottom"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/mainButton"
            android:orientation="horizontal"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:padding="10dp"
            android:layout_margin="13dp"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:background="@drawable/button_circle_selector"
            android:gravity="center"
            android:focusable="true"
            android:nextFocusLeft="@id/mainButton"
            android:nextFocusDown="@id/mainButton"
            android:nextFocusUp="@id/mainButton">

            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/close"
                android:scaleType="centerInside"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/timerView"
                android:orientation="vertical"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginBottom="2dp"
                android:tint="@android:color/white"
                android:scaleType="centerInside"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:visibility="visible">
                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="40"/>
                <TextView
                    android:id="@+id/timerText2"
                    android:layout_width="match_parent"
                    android:layout_height="14dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="SEC"/>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center">
                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="26dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="question"/>

                <LinearLayout
                    android:id="@+id/container"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="fill_horizontal"
                    android:layout_height="48dp" />

                <HorizontalScrollView
                    android:id="@+id/scroller"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/scrollContainer"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:gravity="fill_horizontal"
                        android:layout_height="match_parent" />
                </HorizontalScrollView>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/flipContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:background="@color/flipPromotionBackgroundColor"
                android:visibility="gone"
                android:gravity="center">
            </LinearLayout>>
        </FrameLayout>

        <ImageButton
            android:id="@+id/smallCloseButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/close"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:background="@drawable/button_circle_focus_selector"
            android:focusable="true"
            android:layout_gravity="top"/>
    </LinearLayout>
</LinearLayout>