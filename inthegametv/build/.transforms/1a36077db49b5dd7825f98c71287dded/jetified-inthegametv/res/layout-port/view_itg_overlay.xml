<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.syncedapps.inthegametv.menu.ITGSidebar
        android:id="@+id/sidebar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:orientation="vertical" />

    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/noticeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal" />

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end|bottom"
            android:gravity="end|bottom"
            android:orientation="vertical" />
    </FrameLayout>

    <LinearLayout
        android:id="@+id/menuContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="inherit"
        android:orientation="horizontal"
        android:paddingBottom="0dp">

        <ImageButton
            android:id="@+id/openMenuButton"
            android:layout_width="22dp"
            android:layout_height="40dp"
            android:layout_gravity="left|bottom"
            android:layout_marginBottom="102dp"
            android:background="@drawable/item_menu_btn_selector"
            android:contentDescription="@string/open_menu_button"
            android:paddingVertical="10dp"
            android:paddingStart="4dp"
            android:paddingEnd="8dp"
            android:scaleType="fitCenter"
            android:visibility="invisible"
            android:src="@drawable/ic_open_menu"
            android:tint="@drawable/item_menu_tint_selector" />

        <com.syncedapps.inthegametv.menu.ITGMenu
            android:id="@+id/menu"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_gravity="left|bottom"
            android:layout_marginStart="2dp"
            android:layout_marginBottom="80dp"
            android:layout_weight="1"
            android:visibility="invisible" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/popupContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/shadow"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone" />
</FrameLayout>