<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="210dp"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:gravity="bottom"
    android:layoutDirection="inherit"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/activityContainer"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_gravity="bottom"
        android:background="@drawable/default_portrait_bg"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.84"
            android:focusable="false">

            <LinearLayout
                android:id="@+id/questionContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:focusable="false"
                android:gravity="top|start"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:focusable="false"
                    android:ellipsize="end"
                    android:fontFamily="@font/titilliumweb_bold"
                    android:lineSpacingExtra="-3sp"
                    android:gravity="start"
                    android:maxLines="1"
                    android:paddingBottom="1dp"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    tools:text="Who Are You Rooting For?" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="6dp"
                        android:layout_weight="1">

                        <LinearLayout
                            android:id="@+id/container"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:gravity="start"
                            android:layoutDirection="inherit"
                            android:orientation="horizontal"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <HorizontalScrollView
                            android:id="@+id/scroller"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginBottom="8dp"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <LinearLayout
                                android:id="@+id/scrollContainer"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:gravity="fill_horizontal|center_vertical"
                                android:layoutDirection="inherit"
                                android:orientation="horizontal" />
                        </HorizontalScrollView>

                        <LinearLayout
                            android:id="@+id/wagerContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="visible">

                            <ImageView
                                android:id="@+id/ivWagerIcon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginEnd="4dp"
                                android:padding="2dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/tvWagerAnswer"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/titillium"
                                android:gravity="center_vertical"
                                android:maxWidth="80dp"
                                android:maxLength="18"
                                android:maxLines="1"
                                android:paddingStart="3dp"
                                android:paddingEnd="3dp"
                                android:text="Test"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:textStyle="bold" />

                            <Button
                                android:id="@+id/wagerValueButton"
                                android:layout_width="50dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="6dp"
                                android:layout_marginEnd="1dp"
                                android:background="@drawable/focus_gradient"
                                android:focusable="true"
                                android:fontFamily="@font/titillium"
                                android:gravity="center"
                                android:nextFocusUp="@id/wagerValueButton"
                                android:nextFocusDown="@id/wagerValueButton"
                                android:stateListAnimator="@null"
                                android:text="10/25"
                                android:textColor="@android:color/white"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:orientation="vertical">

                                <ImageButton
                                    android:id="@+id/arrowUpButton"
                                    android:layout_width="30dp"
                                    android:layout_height="18dp"
                                    android:layout_marginBottom="2dp"
                                    android:background="@android:color/transparent"
                                    android:padding="2dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/arrow_up" />

                                <ImageButton
                                    android:id="@+id/arrowDownButton"
                                    android:layout_width="30dp"
                                    android:layout_height="18dp"
                                    android:background="@android:color/transparent"
                                    android:padding="2dp"
                                    android:scaleType="fitCenter"
                                    android:src="@drawable/arrow_down" />
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/separator"
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="10dp"
                                android:layout_marginTop="6dp"
                                android:layout_marginBottom="6dp"
                                android:background="@drawable/base_separator"
                                android:orientation="horizontal" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="4dp"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <Button
                                    android:id="@+id/wagerSubmitButton"
                                    android:layout_width="65dp"
                                    android:layout_height="20dp"
                                    android:layout_marginBottom="3dp"
                                    android:background="@drawable/mobile_button"
                                    android:focusable="true"
                                    android:fontFamily="@font/titillium"
                                    android:gravity="center|start"
                                    android:nextFocusUp="@id/wagerSubmitButton"
                                    android:paddingStart="4dp"
                                    android:stateListAnimator="@null"
                                    android:text="Submit"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                                <Button
                                    android:id="@+id/wagerBackButton"
                                    android:layout_width="65dp"
                                    android:layout_height="20dp"
                                    android:background="@drawable/mobile_button"
                                    android:focusable="true"
                                    android:fontFamily="@font/titillium"
                                    android:gravity="center|start"
                                    android:nextFocusDown="@id/wagerBackButton"
                                    android:paddingStart="4dp"
                                    android:stateListAnimator="@null"
                                    android:text="Back"
                                    android:textAllCaps="false"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/wagerResultContainer"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="6dp"
                            android:layout_weight="1"
                            android:focusable="false"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <ImageView
                                android:id="@+id/ivWagerResultIcon"
                                android:layout_width="25dp"
                                android:layout_height="25dp"
                                android:layout_marginEnd="6dp"
                                android:padding="1dp"
                                android:scaleType="fitXY" />

                            <TextView
                                android:id="@+id/tvWagerCompleted"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:focusable="false"
                                android:fontFamily="@font/titillium"
                                android:gravity="center"
                                android:lineSpacingExtra="-3sp"
                                android:maxLines="2"
                                android:textAlignment="gravity"
                                android:textColor="@android:color/white"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                tools:text="Wager 30 on Answer 1 Potential Win 60" />

                        </LinearLayout>

                        <ProgressBar
                            android:id="@+id/loadingIndicator"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:indeterminateTint="@android:color/white"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:visibility="visible" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <FrameLayout
                        android:id="@+id/flArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp">

                        <include layout="@layout/arrow_layout" />
                    </FrameLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/flipContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="2dp"
                android:background="@android:color/black"
                android:focusable="false"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="gone" />

            <include
                android:id="@+id/include_error_container"
                layout="@layout/view_error_container" />

        </FrameLayout>

        <include
            android:id="@+id/include_extra_info"
            layout="@layout/view_extra_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12" />

    </LinearLayout>
</LinearLayout>