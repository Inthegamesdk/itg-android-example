<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:layoutDirection="inherit"
    android:orientation="vertical"
    android:paddingHorizontal="4dp"
    android:paddingVertical="2dp">

    <FrameLayout
        android:id="@+id/framelayout_answer_trivia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:minWidth="30dp">

        <Button
            android:id="@+id/answerButton"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@drawable/mobile_button"
            android:focusable="true"
            android:gravity="center"
            android:maxLines="1"
            android:nextFocusUp="@id/answerButton"
            android:stateListAnimator="@null"
            android:text="@null"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:orientation="horizontal"
            android:layout_marginEnd="3dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivCheckmark"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="2dp"
                android:scaleType="fitCenter"
                android:padding="1dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="2dp"
                android:padding="1dp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="2dp"
                android:maxLines="1"
                android:layout_marginEnd="3dp"
                android:fontFamily="@font/titilliumweb_bold"
                android:text="title"
                android:textColor="@android:color/white"
                android:textSize="13sp"
                android:textStyle="bold" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>