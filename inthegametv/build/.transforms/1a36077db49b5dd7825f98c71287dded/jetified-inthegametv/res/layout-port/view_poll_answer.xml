<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:paddingHorizontal="4dp"
    android:layoutDirection="inherit"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framelayout_answer_poll"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/answerButton"
            android:layout_width="match_parent"
            android:nextFocusUp="@id/answerButton"
            android:layout_height="18dp"
            android:background="@drawable/mobile_button"
            android:focusable="true"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/pointsBadge"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/coin2"
            android:layout_gravity="start|center_vertical"
            android:text="100"
            android:textSize="7dp"
            android:textColor="@android:color/white"
            android:lineSpacingMultiplier="0.7"
            android:fontFamily="@font/titillium"
            android:textStyle="bold"
            android:gravity="center"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="28dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View
                android:id="@+id/spacer"
                android:layout_width="20dp"
                android:layout_height="4dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="11dp"
                android:layout_height="11dp"
                android:padding="1dp"
                android:layout_marginStart="2dp"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="3dp"
                android:paddingEnd="3dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAnswerStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_gravity="start"
                    android:textAlignment="textStart"
                    android:textStyle="bold"
                    android:text="35"
                    android:textColor="@android:color/white"
                    android:textSize="7sp"
                    android:fontFamily="@font/titillium"
                    android:translationY="2dp" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textStyle="bold"
                android:maxLength="18"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="7sp"
                android:fontFamily="@font/titillium" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>