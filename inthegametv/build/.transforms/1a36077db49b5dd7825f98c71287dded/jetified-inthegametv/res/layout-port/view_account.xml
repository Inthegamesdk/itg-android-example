<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sidebarBackground"
    android:gravity="center_horizontal|top">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layoutDirection="inherit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvMy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/titilliumweb_bold"
                android:text="MY"
                android:textColor="@color/yellowITG"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/titilliumweb_bold"
                android:text="ACCOUNT"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_close_panel"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="6dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/close_sidebar"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_panel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sidebar_separator"
        android:orientation="horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingHorizontal="12dp">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="visible">

            <ImageButton
                android:id="@+id/avatarButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_user_photo"
                android:background="@drawable/item_circle_selector"
                android:nextFocusUp="@id/avatarButton"
                android:nextFocusDown="@id/etUsername"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp" />

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="6dp"
                android:gravity="center_vertical"
                android:hint="Username"
                android:fontFamily="@font/titilliumweb_regular"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:background="@drawable/edit_text_background"
                android:maxLines="1"
                android:inputType="textVisiblePassword"
                android:nextFocusUp="@id/avatarButton"
                android:nextFocusDown="@id/etEmail"
                android:nextFocusForward="@id/etEmail" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginBottom="19dp"
                android:paddingHorizontal="6dp"
                android:gravity="center_vertical"
                android:hint="Email"
                android:fontFamily="@font/titilliumweb_regular"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:background="@drawable/edit_text_background"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@id/saveButton"
                android:nextFocusUp="@id/etUsername"
                android:nextFocusForward="@id/saveButton" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:paddingHorizontal="14dp"
                android:text="Save"
                android:fontFamily="@font/titilliumweb_regular"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:background="@drawable/account_button_selector"
                android:nextFocusUp="@id/etEmail"
                android:nextFocusDown="@id/saveButton" />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Invalid username"
                android:fontFamily="@font/titilliumweb_bold"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/wrong"
                android:visibility="invisible" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gridContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/pictureSaveButton"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="8dp"
                android:text="Save"
                android:fontFamily="@font/titilliumweb_regular"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/account_button_selector"
                android:nextFocusUp="@id/recyclerView"
                android:nextFocusDown="@id/pictureSaveButton" />

            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="6dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateTint="@android:color/white"
                android:visibility="invisible"/>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>