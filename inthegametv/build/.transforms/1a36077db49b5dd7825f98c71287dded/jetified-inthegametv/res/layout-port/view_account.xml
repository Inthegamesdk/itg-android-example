<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/sidebarBackground"
    android:gravity="center_horizontal|top"
    android:orientation="vertical"
    tools:layout_width="242dp">

    <FrameLayout
        android:id="@+id/flSponsorship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/ivSponsorship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layoutDirection="inherit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvMy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/titilliumweb_bold"
                android:text="MY"
                android:textColor="@color/yellowITG"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/titilliumweb_bold"
                android:text="ACCOUNT"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_close_panel"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="6dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/close_sidebar"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_panel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sidebar_separator"
        android:orientation="horizontal" />

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nsvScroller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="12dp">

            <LinearLayout
                android:id="@+id/formContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/avatarButton"
                    android:layout_width="58dp"
                    android:layout_height="58dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginBottom="20dp"
                    android:background="@drawable/item_circle_selector"
                    android:nextFocusUp="@id/avatarButton"
                    android:nextFocusDown="@id/etUsername"
                    android:padding="16dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_user_photo" />

                <EditText
                    android:id="@+id/etUsername"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/titilliumweb_regular"
                    android:gravity="center_vertical"
                    android:hint="Username"
                    android:inputType="textVisiblePassword"
                    android:maxLines="1"
                    android:nextFocusUp="@id/avatarButton"
                    android:nextFocusDown="@id/etEmail"
                    android:nextFocusForward="@id/etEmail"
                    android:paddingHorizontal="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etEmail"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginBottom="19dp"
                    android:background="@drawable/edit_text_background"
                    android:fontFamily="@font/titilliumweb_regular"
                    android:gravity="center_vertical"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:maxLines="1"
                    android:nextFocusUp="@id/etUsername"
                    android:nextFocusDown="@id/saveButton"
                    android:nextFocusForward="@id/saveButton"
                    android:paddingHorizontal="6dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/saveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="33dp"
                    android:background="@drawable/account_button_selector"
                    android:fontFamily="@font/titilliumweb_regular"
                    android:gravity="center"
                    android:nextFocusUp="@id/etEmail"
                    android:nextFocusDown="@id/saveButton"
                    android:paddingHorizontal="14dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/titilliumweb_bold"
                    android:text="Invalid username"
                    android:textColor="@color/wrong"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <LinearLayout
                    android:id="@+id/ll_hide_bottom_slip"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/hide_bottom_slip_background_selector"
                    android:focusable="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvHideBottomSlipLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:gravity="start|center_vertical"
                        android:lines="1"
                        android:paddingStart="6dp"
                        android:text="@string/show_bottom_slip"
                        android:textColor="@color/button_color"
                        android:textSize="18sp"
                        app:autoSizeTextType="uniform" />

                    <TextView
                        android:id="@+id/tvHideBottomSlipValue"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="2dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:gravity="end|center_vertical"
                        android:lineSpacingMultiplier="0.8"
                        android:lines="2"
                        android:maxWidth="70dp"
                        android:paddingStart="4dp"
                        android:paddingEnd="6dp"
                        android:text="@string/hide_8_hours"
                        android:textColor="@color/button_color"
                        android:textSize="14sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvHideBottomSlipLeftValue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end|center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="6dp"
                    android:text="@string/hide_8_hours"
                    android:textColor="@color/button_color"
                    android:textSize="14sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rvHideBottomList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/hide_bottom_slip_list_background"
                    android:nestedScrollingEnabled="false"
                    android:visibility="gone"
                    tools:itemCount="3"
                    tools:listitem="@layout/view_hide_slip_item"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/gridContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/pictureSaveButton"
                    android:layout_width="wrap_content"
                    android:layout_height="27dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/account_button_selector"
                    android:fontFamily="@font/titilliumweb_regular"
                    android:nextFocusUp="@id/recyclerView"
                    android:nextFocusDown="@id/pictureSaveButton"
                    android:paddingHorizontal="14dp"
                    android:text="Save"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />

                <ProgressBar
                    android:id="@+id/loadingIndicator"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="6dp"
                    android:indeterminateTint="@android:color/white"
                    android:visibility="invisible" />
            </LinearLayout>
        </FrameLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>