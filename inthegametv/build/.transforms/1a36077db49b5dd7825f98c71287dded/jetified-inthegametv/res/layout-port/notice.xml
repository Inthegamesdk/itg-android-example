<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivRectangle"
        android:layout_width="16dp"
        android:layout_height="30dp"
        android:rotation="90"
        android:src="@drawable/ic_triangle_grey"
        app:layout_constraintBottom_toBottomOf="@+id/clNotice"
        app:layout_constraintStart_toEndOf="@+id/clNotice"
        app:layout_constraintTop_toTopOf="@+id/clNotice"
        app:layout_constraintVertical_bias="0.15" />


    <LinearLayout
        android:id="@+id/clNotice"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/notice_background"
        android:layoutDirection="ltr"
        android:minWidth="250dp"
        android:orientation="vertical"
        android:paddingVertical="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:textDirection="locale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvNoticeRow1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_regular"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="0.8"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Wrong answer" />

        <TextView
            android:id="@+id/tvNoticeRow2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_regular"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="0.8"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Better luck next time" />

        <LinearLayout
            android:id="@+id/llSeparator"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/base_separator_horizontal"
            android:orientation="horizontal" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:fontFamily="@font/titilliumweb_regular"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="0.85"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Will there be a goal in the next 15 sec?" />


        <LinearLayout
            android:id="@+id/llLose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

            <ImageView
                android:id="@+id/iconLose"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_lose_poll" />

            <TextView
                android:id="@+id/tvAnswerLose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumweb_bold"
                android:paddingStart="8dp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Yes" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llWin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="2dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="@+id/tvTitle"
            app:layout_constraintStart_toStartOf="@+id/tvTitle"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle">

            <ImageView
                android:id="@+id/iconWin"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_win_poll" />

            <TextView
                android:id="@+id/tvAnswerWin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titilliumweb_bold"
                android:paddingStart="8dp"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="Yes" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>