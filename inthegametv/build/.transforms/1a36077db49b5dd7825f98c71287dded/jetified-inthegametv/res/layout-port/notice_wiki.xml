<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivRectangle"
        android:layout_width="12dp"
        android:layout_height="22dp"
        android:rotation="90"
        android:src="@drawable/ic_triangle_grey"
        app:layout_constraintStart_toEndOf="@+id/clNotice"
        android:layout_marginTop="13.5dp"
        app:layout_constraintTop_toTopOf="@+id/clNotice" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clNotice"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="28dp"
        android:minHeight="50dp"
        android:background="@drawable/notice_background"
        android:layoutDirection="ltr"
        android:minWidth="250dp"
        android:orientation="horizontal"
        android:paddingHorizontal="14dp"
        android:paddingVertical="8dp"
        android:textDirection="locale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/titilliumweb_regular"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="0.85"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Will there be a" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:translationX="23dp"
        android:translationY="30dp"
        app:layout_constraintBottom_toTopOf="@+id/clNotice"
        app:layout_constraintEnd_toStartOf="@+id/clNotice"
        tools:src="@drawable/itg_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>