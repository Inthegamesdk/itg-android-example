<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:gravity="bottom"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/activityContainer"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:layout_gravity="bottom"
        android:background="@drawable/default_portrait_bg"
        android:gravity="center"
        android:layoutDirection="inherit"
        android:orientation="horizontal">


        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="0.84">

            <LinearLayout
                android:id="@+id/buyContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layoutDirection="inherit"
                android:layout_marginStart="10dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="10dp"
                android:orientation="vertical"
                android:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:maxLines="1"
                        android:text="Product"
                        android:textAlignment="textStart"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/titillium"
                        android:gravity="start"
                        android:lineSpacingExtra="3sp"
                        android:maxLines="1"
                        android:text="Description"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/white"
                        android:textSize="11sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_regular"
                            android:gravity="center_horizontal"
                            android:maxLines="1"
                            android:text="price after discount of 20%"
                            android:textAlignment="gravity"
                            android:textColor="@android:color/white"
                            android:textSize="10sp" />

                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="$29.99"
                            android:textAlignment="gravity"
                            android:textColor="@android:color/white"
                            android:textSize="16sp" />
                </LinearLayout>

                    <FrameLayout
                        android:id="@+id/flDeliminatorEnd"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginVertical="4dp"
                        android:background="@drawable/base_separator" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="2dp"
                        android:layout_weight="1.5"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvSendSms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/titilliumweb_regular"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="SMS will be sent to ***-***-*609"
                            android:textAlignment="gravity"
                            android:textColor="@android:color/white"
                            android:textSize="9sp"
                            tools:visibility="visible" />

                        <Button
                            android:id="@+id/buyButton"
                            android:layout_width="match_parent"
                            android:layout_height="28dp"
                            android:background="@drawable/mobile_button"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:fontFamily="@font/titilliumweb_bold"
                            android:lines="1"
                            android:text="BUY"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <include
                android:id="@+id/include_error_container"
                layout="@layout/view_error_container" />


        </FrameLayout>

        <include
            android:id="@+id/include_extra_info"
            layout="@layout/view_extra_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12" />

    </LinearLayout>
</LinearLayout>