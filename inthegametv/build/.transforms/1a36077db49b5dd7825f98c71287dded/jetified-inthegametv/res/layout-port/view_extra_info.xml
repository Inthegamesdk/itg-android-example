<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="56dp"
    android:layout_height="108dp"
    android:gravity="center_horizontal"
    android:layoutDirection="inherit"
    tools:background="@android:color/black">

    <LinearLayout
        android:id="@+id/extraInfoContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="0dp"
        android:layout_marginBottom="1dp"
        android:gravity="center_horizontal"
        android:layoutDirection="inherit"
        android:orientation="vertical"
        android:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itg_bottom_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp">

            <FrameLayout
                android:id="@+id/userAreaContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/itg_bottom_btn_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/menuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_answer_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/titillium"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="2dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="3dp"
                    android:text="@string/personalArea_open_menu"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/userAreaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_answer_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/titillium"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:paddingStart="2dp"
                    android:paddingTop="3dp"
                    android:paddingEnd="2dp"
                    android:paddingBottom="3dp"
                    android:text="@string/personalArea_open_personal_area"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />

            </FrameLayout>

            <TextView
                android:id="@+id/itg_bottom_btn_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:fontFamily="@font/titillium"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="|"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/closeButton"
                app:layout_constraintStart_toEndOf="@id/userAreaContainer"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:background="@drawable/button_answer_selector"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/titillium"
                android:minWidth="0dp"
                android:minHeight="0dp"
                android:paddingStart="2dp"
                android:paddingTop="3dp"
                android:paddingEnd="2dp"
                android:paddingBottom="3dp"
                android:text="@string/personalArea_close_personal_area"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/itg_bottom_btn_center"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/timerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="0dp"
                android:focusable="false"
                android:gravity="bottom|end"
                android:orientation="vertical"
                android:tint="@android:color/white"
                android:visibility="visible">

                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:fontFamily="@font/titilliumweb_bold"
                    android:gravity="center"
                    android:text="40"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="19sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/timerText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:fontFamily="@font/titillium"
                    android:gravity="center"
                    android:text="שניות"
                    android:textAlignment="center"
                    android:textColor="@android:color/white"
                    android:textSize="10sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/user_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:visibility="gone"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="26dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tvLevelLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium"
                        android:text="@string/generalOverlay_level"
                        android:textColor="@android:color/white"
                        android:textSize="7sp" />

                    <TextView
                        android:id="@+id/tvLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:text="6"
                        android:textColor="@android:color/white"
                        android:textSize="7sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCreditsLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium"
                        android:lines="1"
                        android:text="@string/generalOverlay_point"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tvCredits"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:text="25000"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvExPoints"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titilliumweb_bold"
                    android:text="5040"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>