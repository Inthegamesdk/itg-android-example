<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:maxHeight="210dp"
    android:layoutDirection="inherit"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/activityContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="108dp"
        android:background="@drawable/default_portrait_bg"
        android:layout_gravity="bottom"
        android:gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.84"
            android:layout_gravity="center"
            android:layoutDirection="inherit"
            android:textDirection="locale"
            android:paddingTop="12dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="34dp"
            android:gravity="center">

            <ScrollView
                android:id="@+id/scroller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:scrollbarAlwaysDrawVerticalTrack="true"
                android:nextFocusUp="@id/scroller"
                android:nextFocusDown="@id/scroller">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="15sp"
                        android:gravity="start|center_vertical"
                        android:textColor="@android:color/white"
                        android:text="test sdfsdafsd\ntest test test\nTEST"
                        android:fontFamily="@font/titillium"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <include
            android:id="@+id/include_extra_info"
            layout="@layout/view_extra_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.12" />

    </LinearLayout>
</LinearLayout>