<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr">

    <ImageView
        android:id="@+id/ivRectangle"
        android:layout_width="16dp"
        android:layout_height="30dp"
        android:rotation="90"
        android:src="@drawable/ic_triangle_grey"
        app:layout_constraintStart_toEndOf="@+id/clNotice"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="@+id/clNotice" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clNotice"
        android:layout_width="193dp"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_gravity="center_vertical|end"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/notice_background"
        android:layoutDirection="ltr"
        android:minWidth="250dp"
        android:orientation="horizontal"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:textDirection="locale"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/titilliumweb_regular"
            android:gravity="center_vertical"
            android:lineSpacingMultiplier="0.85"
            android:textColor="@android:color/white"
            android:textSize="17sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Will there be a goal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:translationX="30dp"
        android:translationY="40dp"
        app:layout_constraintBottom_toTopOf="@+id/clNotice"
        app:layout_constraintEnd_toStartOf="@+id/clNotice"
        tools:src="@drawable/itg_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>