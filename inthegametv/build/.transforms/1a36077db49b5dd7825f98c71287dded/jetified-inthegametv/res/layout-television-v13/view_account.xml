<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    android:background="@color/sidebarBackground"
    android:gravity="center_horizontal|top"
    tools:layout_gravity="end"
    tools:layout_width="192dp">

    <FrameLayout
        android:id="@+id/flSponsorship"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/ivSponsorship"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginHorizontal="2dp"
        android:layoutDirection="inherit">

        <TextView
            android:id="@+id/tvMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:fontFamily="@font/titilliumweb_bold"
            android:text="MY"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/yellowITG" />

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="ACCOUNT"
            android:fontFamily="@font/titilliumweb_bold"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="12dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/sidebar_separator"
        android:orientation="horizontal" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/formContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="visible">
            <ImageButton
                android:id="@+id/avatarButton"
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:padding="16dp"
                android:scaleType="centerInside"
                android:src="@drawable/ic_user_photo"
                android:background="@drawable/item_circle_selector"
                android:nextFocusUp="@id/avatarButton"
                android:nextFocusDown="@id/etUsername"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="20dp"/>

            <EditText
                android:id="@+id/etUsername"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginBottom="16dp"
                android:paddingHorizontal="6dp"
                android:gravity="center_vertical"
                android:hint="Username"
                android:fontFamily="@font/titilliumweb_regular"
                android:textSize="11sp"
                android:maxLines="1"
                android:inputType="textVisiblePassword"
                android:textColor="@android:color/white"
                android:background="@drawable/edit_text_background"
                android:nextFocusUp="@id/avatarButton"
                android:nextFocusDown="@id/etEmail"
                android:nextFocusForward="@id/etEmail" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_marginBottom="19dp"
                android:paddingHorizontal="6dp"
                android:gravity="center_vertical"
                android:hint="Email"
                android:fontFamily="@font/titilliumweb_regular"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:background="@drawable/edit_text_background"
                android:maxLines="1"
                android:inputType="textEmailAddress"
                android:nextFocusDown="@id/saveButton"
                android:nextFocusUp="@id/etUsername"
                android:nextFocusForward="@id/saveButton" />

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:paddingHorizontal="14dp"
                android:text="Save"
                android:fontFamily="@font/titilliumweb_regular"
                android:textSize="11sp"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:background="@drawable/account_button_selector"
                android:nextFocusUp="@id/etEmail"
                />

            <TextView
                android:id="@+id/tvError"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Invalid username"
                android:fontFamily="@font/titilliumweb_bold"
                android:textSize="10sp"
                android:textStyle="bold"
                android:textColor="@color/wrong"
                android:visibility="invisible" />

            <LinearLayout
                android:id="@+id/ll_hide_bottom_slip"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="4dp"
                android:background="@drawable/hide_bottom_slip_background_selector"
                android:focusable="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvHideBottomSlipLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/titilliumweb_bold"
                    android:gravity="start|center_vertical"
                    android:paddingStart="6dp"
                    android:textSize="12sp"
                    android:text="@string/show_bottom_slip"
                    android:textColor="@color/button_color"
                    app:autoSizeTextType="uniform" />

                <TextView
                    android:id="@+id/tvHideBottomSlipValue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/titilliumweb_regular"
                    android:gravity="end|center_vertical"
                    android:paddingStart="4dp"
                    android:paddingEnd="6dp"
                    android:text="@string/hide_8_hours"
                    android:textColor="@color/button_color"
                    android:textSize="8sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvHideBottomSlipLeftValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="6dp"
                android:text="@string/hide_8_hours"
                android:textColor="@color/button_color"
                android:textSize="8sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvHideBottomList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/hide_bottom_slip_list_background"
                android:visibility="gone"
                tools:itemCount="3"
                tools:listitem="@layout/view_hide_slip_item"
                tools:visibility="visible" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/gridContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="gone">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/pictureSaveButton"
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:paddingHorizontal="14dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="12dp"
                android:text="Save"
                android:fontFamily="@font/titilliumweb_regular"
                android:textSize="11sp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:background="@drawable/account_button_selector"
                android:nextFocusUp="@id/recyclerView"
                android:nextFocusDown="@id/pictureSaveButton" />

            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateTint="@android:color/white"
                android:visibility="invisible"/>
        </LinearLayout>
    </FrameLayout>


</LinearLayout>