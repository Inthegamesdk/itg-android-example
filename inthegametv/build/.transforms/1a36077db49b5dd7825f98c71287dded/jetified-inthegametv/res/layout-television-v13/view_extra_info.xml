<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layoutDirection="inherit"
    android:layout_width="130dp"
    android:layout_height="86dp">

    <LinearLayout
        android:id="@+id/extraInfoContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layoutDirection="inherit"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        android:layout_marginBottom="2dp"
        android:gravity="bottom|center_horizontal"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/timerView"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="0dp"
            android:tint="@android:color/white"
            android:gravity="bottom"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:layout_marginStart="3dp"
                android:focusable="false"
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium"
                android:gravity="center"
                android:maxLines="1"
                android:text="40"
                android:textSize="28sp"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <TextView
                android:layout_marginStart="4dp"
                android:focusable="false"
                android:id="@+id/timerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/titillium"
                android:gravity="center"
                android:maxLines="1"
                android:text="שניות"
                android:textColor="@android:color/white"
                android:textAlignment="center"
                android:textSize="13sp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="44dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLevelLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium"
                    android:textColor="@android:color/white"
                    android:text="@string/generalOverlay_level"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium"
                    android:text="6"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCreditsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/titillium"
                    android:lines="1"
                    android:textColor="@android:color/white"
                    android:text="@string/generalOverlay_point"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tvCredits"
                    android:fontFamily="@font/titillium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25000"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvExPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5040"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:fontFamily="@font/titillium"
                android:visibility="gone" />


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itg_bottom_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp">

            <FrameLayout
                android:id="@+id/userAreaContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="2dp"
                android:layout_marginEnd="5dp"
                app:layout_constraintEnd_toStartOf="@id/itg_bottom_btn_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <Button
                    android:id="@+id/menuButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_answer_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/titillium"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:nextFocusDown="@id/userAreaButton"
                    android:paddingStart="5dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:text="@string/personalArea_open_menu"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="11sp" />

                <Button
                    android:id="@+id/userAreaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_answer_selector"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/titillium"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:nextFocusDown="@id/userAreaButton"
                    android:paddingStart="5dp"
                    android:paddingTop="1dp"
                    android:paddingEnd="5dp"
                    android:paddingBottom="2dp"
                    android:text="@string/personalArea_open_personal_area"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:visibility="gone" />

            </FrameLayout>


            <TextView
                android:id="@+id/itg_bottom_btn_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="|"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/closeButton"
                app:layout_constraintStart_toEndOf="@id/userAreaContainer"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="2dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_answer_selector"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/titillium"
                android:nextFocusUp="@id/closeButton"
                android:paddingStart="5dp"
                android:nextFocusDown="@id/closeButton"
                android:paddingEnd="5dp"
                android:paddingTop="1dp"
                android:textColor="@android:color/white"
                android:paddingBottom="2dp"
                android:text="@string/personalArea_close_personal_area"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textAllCaps="false"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/itg_bottom_btn_center"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</LinearLayout>