<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true">
    <LinearLayout
        android:id="@+id/itemContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="3dp"
        android:paddingHorizontal="7dp"
        android:gravity="center_vertical"
        android:background="@drawable/item_background">
        <TextView
            android:id="@+id/tvQuestion"
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="4dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Who will lose?"
            android:textSize="11sp"
            android:fontFamily="@font/titillium"
            android:textStyle="bold"
            android:textColor="@color/buttonYellow" />

        <LinearLayout
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1sp"
            android:background="@color/buttonYellow"
            android:orientation="horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvAnswer"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="Who will lose?"
                android:textSize="11dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:maxLines="1"
                android:text="50"
                android:textSize="11dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="17dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvResult"
                android:layout_width="32dp"
                android:layout_height="11dp"
                android:layout_marginTop="0dp"
                android:gravity="center"
                android:textAlignment="center"
                android:layout_gravity="bottom"
                android:maxLines="1"
                android:text="Pending"
                android:textSize="7dp"
                android:background="@drawable/prediction_result_shape"
                android:fontFamily="@font/titilliumweb_semibold"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/tvWinValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical|end"
                android:textAlignment="textEnd"
                android:maxLines="1"
                android:text="+50"
                android:textSize="11dp"
                android:fontFamily="@font/titillium"
                android:textColor="@color/buttonYellow" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>