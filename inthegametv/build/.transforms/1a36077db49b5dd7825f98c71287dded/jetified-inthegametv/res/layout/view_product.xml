<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="@android:color/transparent">
    <LinearLayout
        android:id="@+id/activityContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layoutDirection="inherit"
        android:background="@drawable/activity_background"
        android:layout_gravity="bottom"
        android:gravity="center">

        <LinearLayout
            android:layout_width="96dp"
            android:focusable="false"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="86dp"
                android:visibility="visible"
                android:layout_height="68dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/itg_icon"
                android:focusable="false"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/errorIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_server_error"
                android:scaleType="centerInside"
                android:visibility="gone"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="54dp">

            <LinearLayout
                android:id="@+id/buyContainer"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layoutDirection="inherit"
                android:paddingStart="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="Product"
                        android:fontFamily="@font/titillium"/>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:maxLines="1"
                        android:text="Description"
                        android:gravity="start"
                        android:textAlignment="gravity"
                        android:lineSpacingExtra="5sp"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/titillium" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/flDeliminator"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/base_separator" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDiscount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="price after discount of 20%"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/white"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="8dp"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="$29.99"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/white"
                        android:textSize="22sp" />
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/flDeliminatorEnd"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="12dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/base_separator" />

                <LinearLayout
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvSendSms"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:fontFamily="@font/titilliumweb_regular"
                        android:gravity="start"
                        android:maxLines="1"
                        android:text="SMS will be sent to ***-***-*609"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/white"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/buyButton"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/mobile_button"
                        android:text="BUY"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/titillium"/>
                </LinearLayout>
            </LinearLayout>

            <include android:id="@+id/include_error_container" layout="@layout/view_error_container"/>

        </FrameLayout>

        <include android:id="@+id/include_extra_info" layout="@layout/view_extra_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"/>

    </LinearLayout>
</LinearLayout>