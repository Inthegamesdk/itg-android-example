<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="86dp"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="@android:color/transparent">
    <LinearLayout
        android:id="@+id/activityContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:layoutDirection="inherit"
        android:background="@drawable/activity_background"
        android:layout_gravity="bottom"
        android:gravity="center">

        <LinearLayout
            android:layout_width="96dp"
            android:focusable="false"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivProduct"
                android:layout_width="86dp"
                android:visibility="visible"
                android:layout_height="68dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/itg_icon"
                android:focusable="false"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/errorIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_server_error"
                android:scaleType="centerInside"
                android:visibility="gone"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="34dp">
            <LinearLayout
                android:id="@+id/buyContainer"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layoutDirection="inherit"
                android:paddingStart="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:gravity="center">
                    <TextView
                        android:id="@+id/tvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="Product"
                        android:fontFamily="@font/titillium"/>

                    <TextView
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:maxLines="1"
                        android:text="Description"
                        android:gravity="start"
                        android:textAlignment="gravity"
                        android:lineSpacingExtra="-5sp"
                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:fontFamily="@font/titillium" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="108dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:id="@+id/buyButton"
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:background="@drawable/mobile_button"
                        android:text="BUY"
                        android:textSize="13dp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:fontFamily="@font/titillium"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:paddingTop="4dp">
                        <TextView
                            android:id="@+id/tvPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$29.99"
                            android:textStyle="bold"
                            android:textSize="11dp"
                            android:textColor="@android:color/white"
                            android:fontFamily="@font/titillium"/>
                        <TextView
                            android:id="@+id/tvDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:text="25% off"
                            android:textSize="11dp"
                            android:textColor="@color/yellowITG"
                            android:fontFamily="@font/titillium"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/phoneContainer"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layoutDirection="inherit"
                android:paddingStart="6dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tvInvalid"
                    android:layout_width="90dp"
                    android:layout_margin="3dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/errorRed"
                    android:text="@string/product_phone_invalid"
                    android:textSize="11dp"
                    android:maxLines="3"
                    android:visibility="invisible"
                    android:fontFamily="@font/titillium"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="6dp"
                    app:hintTextColor="@android:color/white"
                    style="@style/EditTextTheme"
                    android:hint="@string/product_phone_hint">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textDirection="ltr"
                        android:backgroundTint="@android:color/white"
                        android:textSize="16dp"
                        android:inputType="text"
                        android:imeOptions="actionNext"
                        android:nextFocusForward="@+id/nextButton"
                        android:fontFamily="@font/titillium"
                        style="@style/EditTextTheme"/>
                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/nextButton"
                    android:layout_width="82dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mobile_button"
                    android:text="@string/button_next"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/titillium"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/finalContainer"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layoutDirection="inherit"
                android:paddingStart="12dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone">
                <TextView
                    android:id="@+id/tvFinal"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:maxLines="2"
                    android:text="@string/product_check_phone"
                    android:gravity="start"
                    android:textAlignment="gravity"
                    android:lineSpacingExtra="-5sp"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/titillium" />
                <Button
                    android:id="@+id/gotItButton"
                    android:layout_width="82dp"
                    android:layout_height="30dp"
                    android:background="@drawable/mobile_button"
                    android:text="@string/button_got_it"
                    android:textSize="13dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:fontFamily="@font/titillium"/>
            </LinearLayout>
            <include android:id="@+id/include_error_container" layout="@layout/view_error_container"/>

        </FrameLayout>

        <include android:id="@+id/include_extra_info" layout="@layout/view_extra_info"/>

    </LinearLayout>
</LinearLayout>