<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_width="96dp"
    android:layout_height="86dp"
    android:layoutDirection="inherit"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/extraInfoContainer"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layoutDirection="inherit"
        android:layout_marginStart="0dp"
        android:orientation="vertical"
        android:visibility="visible"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="2dp">

        <LinearLayout
            android:id="@+id/timerView"
            android:focusable="false"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:tint="@android:color/white"
            android:gravity="bottom"
            android:layout_marginEnd="3dp"
            android:layout_gravity="bottom|center_horizontal"
            android:visibility="visible">
            <TextView
                android:focusable="false"
                android:layout_marginStart="1dp"
                android:id="@+id/timerText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/titillium"
                android:textSize="22sp"
                android:textColor="@android:color/white"
                android:text="40"/>
            <TextView
                android:focusable="false"
                android:layout_marginStart="3dp"
                android:id="@+id/timerText2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/titillium"
                android:text="שניות"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="38dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvLevelLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/generalOverlay_level"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:fontFamily="@font/titillium" />

                <TextView
                    android:id="@+id/tvLevel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="6"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:fontFamily="@font/titillium" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="46dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCreditsLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="@string/generalOverlay_point"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:fontFamily="@font/titillium"/>

                <TextView
                    android:textStyle="bold"
                    android:id="@+id/tvCredits"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25000"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:fontFamily="@font/titillium"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvExPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5040"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:visibility="gone"
                android:fontFamily="@font/titillium"/>


        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/itg_bottom_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginBottom="3dp">

            <Button
                android:id="@+id/userAreaButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:background="@drawable/button_answer_selector"
                android:clickable="true"
                android:focusable="true"
                android:minHeight="0dp"
                android:minWidth="0dp"
                android:paddingStart="3dp"
                android:paddingTop="1dp"
                android:paddingEnd="3dp"
                android:paddingBottom="2dp"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:text="@string/personalArea_open_personal_area"
                android:textAllCaps="false"
                android:fontFamily="@font/titillium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/itg_bottom_btn_center"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/itg_bottom_btn_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:focusable="false"
                android:text="|"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:fontFamily="@font/titillium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/closeButton"
                app:layout_constraintStart_toEndOf="@id/userAreaButton"
                app:layout_constraintTop_toTopOf="parent" />


            <TextView
                android:id="@+id/closeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_answer_selector"
                android:clickable="true"
                android:focusable="true"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="3dp"
                android:paddingStart="3dp"
                android:paddingTop="1dp"
                android:paddingEnd="3dp"
                android:paddingBottom="2dp"
                android:textColor="@android:color/white"
                android:textSize="9sp"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/itg_bottom_btn_center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:fontFamily="@font/titillium"
                android:text="@string/personalArea_close_personal_area" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>
</LinearLayout>