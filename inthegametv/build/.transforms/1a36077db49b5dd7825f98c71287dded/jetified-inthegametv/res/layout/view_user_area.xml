<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="50dp"
    android:layout_marginVertical="40dp"
    android:layoutDirection="ltr"
    android:textDirection="ltr"
    android:background="@drawable/popup_background">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="36dp"
        android:layout_marginVertical="36dp"
        android:layout_marginLeft="130dp"
        android:layoutDirection="rtl"
        android:textDirection="rtl"
        android:gravity="right">
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="TITLE"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            android:fontFamily="@font/titillium"
            android:textSize="17sp"/>
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat. Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur. Excepteur sint occaecat cupidatat non proident, sunt in culpa qui officia deserunt mollit anim id est laborum."
            android:textColor="@android:color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/tvPhone"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginBottom="2dp"
            android:paddingHorizontal="16dp"
            android:textDirection="ltr"
            android:textAlignment="textEnd"
            android:gravity="right|center_vertical"
            android:text="0012345"
            android:textColor="@android:color/white"
            android:fontFamily="@font/titillium"
            android:textSize="15sp"
            android:clickable="true"
            android:focusable="true"
            android:nextFocusUp="@id/tvPhone"
            android:nextFocusLeft="@id/tvPhone"
            android:background="@drawable/popup_field_selector"/>
        <TextView
            android:id="@+id/tvInvalid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:gravity="right"
            android:text="@string/phone_invalid"
            android:textColor="@color/cellcomButton"
            android:fontFamily="@font/titillium"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/saveContainer"
            android:orientation="horizontal"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_marginVertical="8dp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/popup_field_selector"
            android:nextFocusDown="@id/buttonSend"
            android:nextFocusLeft="@id/saveContainer">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingRight="16dp"
                android:textAlignment="center"
                android:gravity="right|center_vertical"
                android:text="Save phone"
                android:textColor="@android:color/white"
                android:fontFamily="@font/titillium"
                android:textSize="15sp"/>
            <Switch
                android:id="@+id/saveSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumbTint="@drawable/switch_thumb"
                android:trackTint="@color/switchTrack"
                android:focusable="false"
                android:checked="true"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right|bottom"
            android:layout_marginVertical="8dp" >
            <TextView
                android:id="@+id/tvDoneInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:paddingRight="16dp"
                android:textAlignment="center"
                android:gravity="right|center_vertical"
                android:text="Message send info stuff"
                android:textColor="@android:color/white"
                android:fontFamily="@font/titillium"
                android:textSize="14sp"
                android:visibility="gone"/>
            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:indeterminateTint="@color/cellcomButton"
                android:visibility="gone"/>
            <Button
                android:id="@+id/buttonSend"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:paddingRight="16dp"
                android:paddingLeft="32dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/titillium"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Send SMS"
                android:background="@drawable/button_popup_selector"
                android:nextFocusUp="@id/saveContainer"
                android:nextFocusDown="@id/buttonSend"
                android:nextFocusRight="@id/pad0"
                android:nextFocusLeft="@id/buttonSend"
                android:gravity="center"/>
            <Button
                android:id="@+id/buttonResend"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:paddingRight="16dp"
                android:paddingLeft="32dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/titillium"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Re-send SMS"
                android:nextFocusUp="@id/saveContainer"
                android:background="@drawable/button_popup_selector"
                android:gravity="center"
                android:nextFocusRight="@id/pad0"
                android:nextFocusLeft="@id/buttonResend"
                android:visibility="gone"/>
            <Button
                android:id="@+id/buttonDone"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginBottom="4dp"
                android:paddingRight="16dp"
                android:paddingLeft="32dp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/titillium"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Done"
                android:background="@drawable/button_popup_selector"
                android:gravity="center"
                android:nextFocusDown="@id/buttonDone"
                android:nextFocusRight="@id/pad0"
                android:nextFocusLeft="@id/buttonDone"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/tvSendInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:textAlignment="center"
                android:gravity="right|center_vertical"
                android:text="SMS will arrive within 2 minutes or something like that"
                android:textColor="@android:color/white"
                android:fontFamily="@font/titillium"
                android:textSize="12sp"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="1sp"
        android:layout_height="match_parent"
        android:background="@drawable/vertical_gradient" />
    <LinearLayout
        android:id="@+id/phonePad"
        android:orientation="vertical"
        android:layout_gravity="top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="36dp">
        <ImageView
            android:id="@+id/qrCodeView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            android:layout_marginBottom="32dp" />
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <ImageButton
                android:id="@+id/padClear"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@android:drawable/ic_input_delete"
                android:padding="4dp"
                android:scaleX="-1"
                android:foregroundTint="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"
                android:nextFocusLeft="@id/tvPhone"/>
            <Button
                android:id="@+id/pad1"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="1"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/pad2"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="2"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/pad3"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="3"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <Button
                android:id="@+id/pad4"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="4"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"
                android:nextFocusLeft="@id/tvPhone"/>
            <Button
                android:id="@+id/pad5"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="5"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/pad6"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="6"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/buttonContainer"
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="25dp">
            <Button
                android:id="@+id/padBtn"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:text="clr"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"
                android:nextFocusLeft="@id/tvPhone"/>
            <Button
                android:id="@+id/pad7"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="7"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/pad8"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="8"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/pad9"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="9"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <Button
                android:id="@+id/pad0"
                android:layout_width="25dp"
                android:layout_height="match_parent"
                android:text="0"
                android:textSize="15dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white"
                android:background="@drawable/button_center_selector"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_marginRight="25dp"
                android:nextFocusLeft="@id/tvPhone"
                android:nextFocusDown="@id/pad0"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>