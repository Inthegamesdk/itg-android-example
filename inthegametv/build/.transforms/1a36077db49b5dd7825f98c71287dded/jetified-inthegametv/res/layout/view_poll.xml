<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="206dp"
    android:layoutDirection="ltr"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="@android:color/transparent">
    <LinearLayout
        android:id="@+id/activityContainer"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@drawable/activity_background"
        android:layout_gravity="bottom"
        android:gravity="center">
        <LinearLayout
            android:layout_width="66dp"
            android:focusable="false"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo_itg"
                android:layout_width="40dp"
                android:visibility="visible"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:src="@drawable/itg_icon"
                android:focusable="false"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/errorIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_server_error"
                android:scaleType="centerInside"
                android:visibility="gone"/>
        </LinearLayout>

        <FrameLayout
            android:focusable="false"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="0.85"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_marginTop="16dp"
                android:focusable="false"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/questionContainer"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="4dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:paddingBottom="2dp"
                    android:focusable="false"
                    android:layout_marginStart="3dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="-4.5sp"
                    android:maxLines="3"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/titillium"
                    tools:text="וששששששששששששש" />

                <FrameLayout
                    android:id="@+id/flDeliminator"
                    android:layout_width="0.9dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="14dp"
                    android:background="@drawable/base_separator" />

                <LinearLayout
                    android:focusable="false"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="16dp"
                    android:layout_gravity="center"
                    android:id="@+id/container"
                    android:layoutDirection="locale"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                </LinearLayout>


                <HorizontalScrollView
                    android:id="@+id/scroller"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="16dp"
                    android:layoutDirection="inherit"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <LinearLayout
                        android:id="@+id/scrollContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="fill_horizontal|center_vertical"
                        android:layoutDirection="inherit"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <LinearLayout
                    android:id="@+id/wagerContainer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="6dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivWagerIcon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="8dp"
                        android:padding="2dp"
                        android:scaleType="fitXY" />

                    <TextView
                        android:id="@+id/tvWagerAnswer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/titillium"
                        android:gravity="center_vertical"
                        android:maxWidth="70dp"
                        android:maxLength="18"
                        android:maxLines="1"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="Test"
                        android:textColor="@android:color/white"
                        android:textSize="10sp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/wagerValueButton"
                        android:layout_width="64dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="2dp"
                        android:background="@drawable/focus_gradient"
                        android:focusable="true"
                        android:fontFamily="@font/titillium"
                        android:gravity="center"
                        android:nextFocusUp="@id/wagerValueButton"
                        android:nextFocusDown="@id/wagerValueButton"
                        android:stateListAnimator="@null"
                        android:text="10/25"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/arrowUpButton"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginBottom="4dp"
                            android:background="@android:color/transparent"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/arrow_up" />

                        <ImageButton
                            android:id="@+id/arrowDownButton"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:background="@android:color/transparent"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/arrow_down" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/separator"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="14dp"
                        android:background="@drawable/base_separator"
                        android:orientation="horizontal"
                        tools:visibility="visible" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="1dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <Button
                            android:id="@+id/wagerSubmitButton"
                            android:layout_width="52dp"
                            android:layout_height="20dp"
                            android:layout_marginBottom="8dp"
                            android:background="@drawable/mobile_button"
                            android:focusable="true"
                            android:fontFamily="@font/titillium"
                            android:gravity="center|start"
                            android:nextFocusUp="@id/wagerSubmitButton"
                            android:paddingStart="4dp"
                            android:stateListAnimator="@null"
                            android:text="Submit"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold" />

                        <Button
                            android:id="@+id/wagerBackButton"
                            android:layout_width="52dp"
                            android:layout_height="20dp"
                            android:background="@drawable/mobile_button"
                            android:focusable="true"
                            android:fontFamily="@font/titillium"
                            android:gravity="center|start"
                            android:nextFocusDown="@id/wagerBackButton"
                            android:paddingStart="4dp"
                            android:stateListAnimator="@null"
                            android:text="Back"
                            android:textColor="@android:color/white"
                            android:textSize="11sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/wagerResultContainer"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_weight="1"
                    android:focusable="false"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivWagerResultIcon"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:padding="2dp"
                        android:layout_marginStart="8dp"
                        android:scaleType="fitXY" />
                    <TextView
                        android:id="@+id/tvWagerCompleted"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:focusable="false"
                        android:layout_marginStart="8dp"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="-5sp"
                        android:maxLines="2"
                        android:textAlignment="gravity"
                        android:textColor="@android:color/white"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/titillium"
                        tools:text="Wager 30 on Answer 1 Potential Win 60" />

                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/flipContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="2dp"
                android:layout_marginStart="2dp"
                android:background="@android:color/black"
                android:visibility="gone"
                android:gravity="center"
                android:focusable="false"
                >
            </LinearLayout>

            <include android:id="@+id/include_error_container" layout="@layout/view_error_container"/>

        </FrameLayout>

        <include android:id="@+id/include_extra_info" layout="@layout/view_extra_info"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.15"/>

    </LinearLayout>
</LinearLayout>