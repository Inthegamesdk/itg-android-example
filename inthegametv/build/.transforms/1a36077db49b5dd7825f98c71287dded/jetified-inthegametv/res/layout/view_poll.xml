<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="206dp"
    android:layoutDirection="locale"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:background="@android:color/transparent">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="86dp"
        android:background="@drawable/activity_background"
        android:layout_gravity="bottom"
        android:gravity="center">
        <LinearLayout
            android:layout_width="66dp"
            android:focusable="false"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/logo_itg"
                android:layout_width="40dp"
                android:visibility="visible"
                android:layout_height="40dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center"
                android:background="@drawable/itg_icon"
                android:focusable="false"
                android:scaleType="centerInside"
                app:tint="@android:color/white" />

            <ImageView
                android:id="@+id/errorIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_server_error"
                android:scaleType="centerInside"
                android:visibility="gone"/>
        </LinearLayout>

        <FrameLayout
            android:focusable="false"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_marginTop="10dp"
                android:focusable="false"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/questionContainer"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="4dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:paddingBottom="2dp"
                    android:focusable="false"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:lineSpacingExtra="-3sp"
                    android:maxLines="3"
                    android:textAlignment="gravity"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/titillium"
                    tools:text="וששששששששששששש" />

                <LinearLayout
                    android:focusable="false"
                    android:layout_marginLeft="14dp"
                    android:layout_gravity="center"
                    android:id="@+id/container"
                    android:nextFocusLeft="@id/container"
                    android:orientation="horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_height="match_parent">

                </LinearLayout>
                <HorizontalScrollView
                    android:id="@+id/scroller"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/scrollContainer"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:gravity="fill_horizontal"
                        android:layout_height="match_parent" />
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/flipContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:background="@android:color/black"
                android:visibility="gone"
                android:gravity="center"
                android:focusable="false"
                >
            </LinearLayout>

            <include android:id="@+id/include_error_container" layout="@layout/view_error_container"/>

        </FrameLayout>

        <include android:id="@+id/include_extra_info" layout="@layout/view_extra_info"/>

    </LinearLayout>
</LinearLayout>