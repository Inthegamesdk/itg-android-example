<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@android:color/transparent"
    android:gravity="bottom"
    android:layoutDirection="inherit"
    android:maxHeight="286dp"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/activityContainer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/slip_tv_lifted_height"
        android:layout_gravity="bottom"
        android:gravity="end|bottom"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/flLogoSection"
            android:layout_width="0dp"
            android:layout_height="@dimen/slip_tv_base_height"
            android:layout_weight="10"
            android:background="#262626">

            <LinearLayout
                android:id="@+id/ll_logo_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/slip_tv_padding"
                android:layout_marginStart="@dimen/slip_tv_padding"
                android:background="#000000"
                android:focusable="false"
                android:gravity="center">

                <ImageView
                    android:id="@+id/logo_itg"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:focusable="false"
                    android:scaleType="centerInside"
                    android:src="@drawable/itg_icon"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/errorIcon"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_server_error"
                    android:visibility="gone" />
            </LinearLayout>

        </FrameLayout>


        <FrameLayout
            android:id="@+id/flQuestionSection"
            android:layout_width="0dp"
            android:layout_height="@dimen/slip_tv_base_height"
            android:layout_weight="35"
            android:background="#262626">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginVertical="@dimen/slip_tv_padding"
                android:layout_marginStart="@dimen/slip_tv_padding"
                android:background="#000000"
                android:focusable="false"
                android:fontFamily="@font/titilliumweb_semibold"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="0.66"
                android:maxLines="2"
                android:paddingHorizontal="14dp"
                android:textAlignment="viewStart"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                tools:text="What color belt was worn by" />

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flAnswerSection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="45">

            <FrameLayout
                android:id="@+id/flAnswerSectionBackground"
                android:layout_width="match_parent"
                android:layout_height="@dimen/slip_tv_base_height"
                android:layout_gravity="bottom"
                android:background="#262626" />

            <FrameLayout
                android:id="@+id/flAnswerLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingVertical="@dimen/slip_tv_padding"
                android:paddingStart="@dimen/slip_tv_padding">

                <FrameLayout
                    android:id="@+id/flAnswerBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/slip_tv_lift_top"
                    android:background="#000000" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clAnswerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/slip_tv_lift_top">

                    <LinearLayout
                        android:id="@+id/container"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:gravity="center"
                        android:layoutDirection="inherit"
                        android:orientation="horizontal"
                        android:visibility="visible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <HorizontalScrollView
                        android:id="@+id/scroller"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layoutDirection="inherit"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible">

                        <LinearLayout
                            android:id="@+id/scrollContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="fill_horizontal|center_vertical"
                            android:layoutDirection="inherit"
                            android:orientation="horizontal" />
                    </HorizontalScrollView>

                    <LinearLayout
                        android:id="@+id/wagerContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible">

                        <ImageView
                            android:id="@+id/ivWagerIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="fitStart"
                            android:visibility="visible"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/llWagerContent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvWagerAnswer"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:background="@drawable/background_answer_kidoodle_wager"
                                    android:fontFamily="@font/titilliumweb_regular"
                                    android:gravity="center"
                                    android:maxWidth="180dp"
                                    android:maxLength="18"
                                    android:maxLines="1"
                                    android:minWidth="50dp"
                                    android:paddingHorizontal="10dp"
                                    android:text="Salah"
                                    android:textColor="@android:color/black"
                                    android:textSize="13sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvWagerOdds"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:gravity="center"
                                    android:text="4/1"
                                    android:textAlignment="textStart"
                                    android:textColor="#ffd100"
                                    android:textSize="13sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@+id/tvWagerAnswer"
                                    app:layout_constraintTop_toBottomOf="@+id/tvWagerAnswer" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="20dp"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/arrowUp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/arrow_up"
                                    android:tint="#3b3b3b" />

                                <ImageView
                                    android:id="@+id/arrowDown"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="10dp"
                                    android:src="@drawable/arrow_down"
                                    android:tint="#3b3b3b" />
                            </FrameLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="10dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvWagerValueLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:paddingHorizontal="10dp"
                                    android:text="Play"
                                    android:textAllCaps="true"
                                    android:textColor="#ffd100"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/wagerValueButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:background="@drawable/button_answer_kidoodle_rounded_selector"
                                    android:focusable="true"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:gravity="start|center_vertical"
                                    android:minWidth="50dp"
                                    android:nextFocusUp="@id/wagerValueButton"
                                    android:nextFocusDown="@id/wagerValueButton"
                                    android:paddingHorizontal="10dp"
                                    android:stateListAnimator="@null"
                                    android:text="10"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvWagerWinLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:text="Win"
                                    android:textAllCaps="true"
                                    android:textColor="#ffd100"
                                    android:textSize="12sp" />

                                <TextView
                                    android:id="@+id/wagerWinButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:gravity="start|center_vertical"
                                    android:stateListAnimator="@null"
                                    android:text="100"
                                    android:textColor="@android:color/white"
                                    android:textSize="14sp"
                                    android:textStyle="bold" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/wagerSubmitButton"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="16dp"
                                android:background="@drawable/button_wager_answer_kidoodle_rounded_selector"
                                android:focusable="true"
                                android:fontFamily="@font/titillium"
                                android:gravity="center"
                                android:paddingHorizontal="10dp"
                                android:stateListAnimator="@null"
                                android:text="Submit"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/wagerBackButton"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginStart="4dp"
                                android:background="@drawable/button_wager_answer_kidoodle_rounded_selector"
                                android:focusable="true"
                                android:fontFamily="@font/titilliumweb_regular"
                                android:gravity="center"
                                android:paddingHorizontal="10dp"
                                android:stateListAnimator="@null"
                                android:text="Back"
                                android:textColor="@android:color/white"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wagerResultContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="gone">

                        <ImageView
                            android:id="@+id/ivWagerResultIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="fitStart"
                            android:visibility="visible"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/llWagerResultContent"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvWagerCompleted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:background="@drawable/background_answer_kidoodle_wager"
                                    android:fontFamily="@font/titilliumweb_regular"
                                    android:gravity="center"
                                    android:maxWidth="180dp"
                                    android:maxLength="18"
                                    android:maxLines="1"
                                    android:minWidth="50dp"
                                    android:paddingHorizontal="10dp"
                                    android:text="Salah"
                                    android:textColor="@android:color/black"
                                    android:textSize="13sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvWagerOddsCompleted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:gravity="center"
                                    android:text="4/1"
                                    android:textAlignment="textStart"
                                    android:textColor="#ffd100"
                                    android:textSize="13sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@+id/tvWagerCompleted"
                                    app:layout_constraintTop_toBottomOf="@+id/tvWagerCompleted" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvWagerValueLabelCompleted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:paddingHorizontal="4dp"
                                    android:text="Playing"
                                    android:textAllCaps="true"
                                    android:textColor="#ffd100"
                                    android:textFontWeight="800"
                                    android:textSize="17sp" />

                                <TextView
                                    android:id="@+id/wagerValueButtonCompleted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:gravity="center"
                                    android:paddingHorizontal="4dp"
                                    android:stateListAnimator="@null"
                                    android:text="100"
                                    android:textColor="@android:color/white"
                                    android:textFontWeight="800"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                            </FrameLayout>

                            <FrameLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginStart="16dp"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvWagerWinLabelCompleted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginBottom="10dp"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:text="To Win"
                                    android:textAllCaps="true"
                                    android:textColor="#ffd100"
                                    android:textFontWeight="800"
                                    android:textSize="17sp" />

                                <TextView
                                    android:id="@+id/wagerWinButtonCompleted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginTop="5dp"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:gravity="start|center_vertical"
                                    android:stateListAnimator="@null"
                                    android:text="100"
                                    android:textColor="@android:color/white"
                                    android:textFontWeight="800"
                                    android:textSize="17sp"
                                    android:textStyle="bold" />

                            </FrameLayout>

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/wagerVotedContainer"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:gravity="start"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible">

                        <ImageView
                            android:id="@+id/ivWagerVotedIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginEnd="12dp"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="fitStart"
                            android:visibility="visible"
                            tools:visibility="visible" />

                        <LinearLayout
                            android:id="@+id/llWagerVotedContent"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/tvWagerVoted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="25dp"
                                    android:background="@drawable/background_answer_kidoodle_wager"
                                    android:fontFamily="@font/titilliumweb_regular"
                                    android:gravity="center_vertical"
                                    android:maxWidth="180dp"
                                    android:maxLength="18"
                                    android:maxLines="1"
                                    android:paddingHorizontal="10dp"
                                    android:text="Salah"
                                    android:textColor="@android:color/black"
                                    android:textSize="13sp"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <TextView
                                    android:id="@+id/tvWagerOddsVoted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="bottom|center_horizontal"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:gravity="center"
                                    android:text="4/1"
                                    android:textAlignment="textStart"
                                    android:textColor="#ffd100"
                                    android:textSize="13sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="@+id/tvWagerVoted"
                                    app:layout_constraintTop_toBottomOf="@+id/tvWagerVoted" />
                            </androidx.constraintlayout.widget.ConstraintLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="4dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvWagerVotedMsg1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:gravity="end"
                                    android:lineSpacingMultiplier="0.6"
                                    android:text="YOU`RE IN\nTHE GAME"
                                    android:textColor="#ffd100"
                                    android:textFontWeight="1000"
                                    android:textSize="29sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tvWagerVotedMsg2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="4dp"
                                    android:fontFamily="@font/titilliumweb_bold"
                                    android:gravity="start"
                                    android:lineSpacingMultiplier="0.6"
                                    android:text="GOOD\nLUCK!"
                                    android:textColor="#ffffff"
                                    android:textFontWeight="1000"
                                    android:textSize="29sp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/loadingIndicator"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:indeterminateTint="@android:color/white"
                        android:visibility="gone"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:visibility="visible" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <FrameLayout
                    android:id="@+id/flArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginTop="@dimen/slip_tv_content_lift_top">

                    <include layout="@layout/arrow_layout_kidoodle" />
                </FrameLayout>
            </FrameLayout>

        </FrameLayout>

        <FrameLayout
            android:id="@+id/flErrorSection"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:visibility="gone">

            <include
                android:id="@+id/include_error_container"
                layout="@layout/view_error_container" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/flTimerSection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/slip_tv_lift_top"
            android:layout_weight="10"
            android:background="#262626"
            android:paddingVertical="@dimen/slip_tv_padding">

            <include
                android:id="@+id/include_extra_info"
                layout="@layout/view_extra_info_kidoodle" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>