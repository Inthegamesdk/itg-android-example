<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="26dp"
    android:layout_weight="1"
    android:paddingStart="4dp"
    android:paddingEnd="4dp"
    android:paddingVertical="1dp"
    android:layoutDirection="inherit"
    android:gravity="center">

    <FrameLayout
        android:minHeight="0dp"
        android:id="@+id/framelayout_answer_trivia"
        android:layout_width="wrap_content"
        android:minWidth="40dp"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/answerButton"
            android:nextFocusUp="@id/answerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:textSize="9sp"
            android:textStyle="bold"
            android:maxLines="1"
            android:background="@drawable/mobile_button"
            android:text="@null"
            android:stateListAnimator="@null"
            android:focusable="true"/>

        <LinearLayout
            android:id="@+id/ll_button_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingStart="5dp"
            android:paddingEnd="5dp">

            <ImageView
                android:id="@+id/ivCheckmark"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_vertical"
                android:scaleType="fitCenter"
                android:layout_marginEnd="3dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginEnd="3dp"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:paddingEnd="2dp"
                android:paddingStart="2dp"
                android:maxLines="1"
                android:text="title"
                android:fontFamily="@font/titillium"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>