<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/llAnswerContainer"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="6dp"
    android:gravity="center_vertical"
    android:layoutDirection="inherit"
    android:orientation="horizontal"
    android:animateLayoutChanges="true"
    tools:layout_height="86dp">

    <ImageView
        android:id="@+id/ivIcon"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:padding="2dp"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_answer_poll"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:background="@drawable/button_answer_kidoodle_rounded_selector"
            android:fontFamily="@font/titilliumweb_semibold"
            android:gravity="center"
            android:maxLength="18"
            android:maxLines="1"
            android:minWidth="50dp"
            android:paddingHorizontal="10dp"
            android:text="Salah"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvAnswerStats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_bold"
            android:gravity="center"
            android:text="35%"
            android:textAlignment="textStart"
            android:textColor="@android:color/white"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvOdds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumweb_bold"
            android:gravity="center"
            android:text="4/1"
            android:textAlignment="textStart"
            android:textColor="#ffd100"
            android:textSize="13sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTitle"
            tools:visibility="visible" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/pointsBadge"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="8dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/answerButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/answerButton"
        app:layout_constraintTop_toTopOf="@+id/answerButton"
        tools:visibility="visible">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/coin2" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/coin2"
            android:translationX="-8dp" />

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/coin2"
            android:translationX="-16dp" />

        <TextView
            android:id="@+id/pointsBadgeLabel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:fontFamily="@font/titillium"
            android:gravity="center"
            android:lineSpacingMultiplier="0.6"
            android:text="100"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            android:textStyle="bold"
            android:translationX="-8dp" />
    </LinearLayout>
</LinearLayout>