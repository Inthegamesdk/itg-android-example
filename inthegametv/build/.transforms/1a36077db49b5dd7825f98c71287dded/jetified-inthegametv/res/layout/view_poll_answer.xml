<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:layoutDirection="inherit"
    android:layout_marginHorizontal="3dp"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/framelayout_answer_poll"
        android:layout_width="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/answerButton"
            android:layout_width="match_parent"
            android:nextFocusUp="@id/answerButton"
            android:layout_height="32dp"
            android:background="@drawable/mobile_button"
            android:focusable="true"
            android:gravity="center"
            android:stateListAnimator="@null"
            android:layout_gravity="center"/>

        <FrameLayout
            android:id="@+id/pointsBadge"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_gravity="start|center_vertical"
            android:visibility="gone">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/coin2" />
            <TextView
                android:id="@+id/pointsBadgeLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="100"
                android:rotation="-12"
                android:textSize="9dp"
                android:textColor="@android:color/white"
                android:lineSpacingMultiplier="0.6"
                android:fontFamily="@font/titillium"
                android:textStyle="bold"
                android:gravity="center"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:minWidth="40dp"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <View
                android:id="@+id/spacer"
                android:layout_width="36dp"
                android:layout_height="4dp"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/ivIcon"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:padding="2dp"
                android:layout_marginStart="4dp"
                android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="6dp"
            android:paddingEnd="6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvAnswerStats"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_gravity="start"
                android:textAlignment="textStart"
                android:textStyle="bold"
                android:text="35"
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:fontFamily="@font/titillium"
                android:translationY="3dp"/>
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:textStyle="bold"
                android:maxLength="18"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="15sp"
                android:fontFamily="@font/titillium" />
        </LinearLayout>
        </LinearLayout>
    </FrameLayout>

</LinearLayout>