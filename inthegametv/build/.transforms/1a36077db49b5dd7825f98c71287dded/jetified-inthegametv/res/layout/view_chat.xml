    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/messagesView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:nextFocusUp="@id/messagesView"
            android:nextFocusDown="@id/avatarsView"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:orientation="horizontal"
        android:paddingHorizontal="2dp"
        android:paddingVertical="2dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="4dp"
        android:background="@drawable/item_background">
        <LinearLayout
            android:id="@+id/messageField"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start|center_vertical"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/userIconView"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:scaleType="fitCenter"
                android:layout_marginHorizontal="2dp"
                android:padding="6dp"/>
            <LinearLayout
                android:id="@+id/composeContainer"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:orientation="horizontal"
                android:layout_marginHorizontal="2dp"
                android:background="@drawable/chat_button_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageButton
                android:id="@+id/buttonClear"
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:background="@drawable/chat_button_selector"
                android:layout_gravity="center"
                android:padding="0dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/ic_clear_chat" />
            <ImageButton
                android:id="@+id/buttonSend"
                android:layout_width="24dp"
                android:layout_height="16dp"
                android:padding="0dp"
                android:background="@drawable/chat_button_selector"
                android:layout_gravity="center"
                android:src="@drawable/ic_send_chat" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:paddingStart="8dp"
        android:paddingEnd="6dp"
        android:layout_marginVertical="4dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="24dp"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/categoryButton1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:layout_marginVertical="2dp"
                android:scaleType="centerInside"
                android:nextFocusUp="@id/buttonSend"
                android:background="@drawable/item_cheer_selector"/>
            <ImageButton
                android:id="@+id/categoryButton2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:layout_marginVertical="2dp"
                android:scaleType="centerInside"
                android:background="@drawable/item_cheer_selector"/>
            <ImageButton
                android:id="@+id/categoryButton3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:layout_marginVertical="2dp"
                android:scaleType="centerInside"
                android:background="@drawable/item_cheer_selector"/>
            <ImageButton
                android:id="@+id/categoryButton4"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:padding="4dp"
                android:layout_marginVertical="2dp"
                android:scaleType="centerInside"
                android:nextFocusDown="@id/categoryButton4"
                android:background="@drawable/item_cheer_selector"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/sidebarBackground"
            android:layout_marginHorizontal="3dp"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/avatarsView"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:focusable="true"
        android:nextFocusUp="@id/avatarsView"
        android:nextFocusDown="@id/recyclerView"
        android:background="@android:color/black"/>
    </LinearLayout>
</LinearLayout>