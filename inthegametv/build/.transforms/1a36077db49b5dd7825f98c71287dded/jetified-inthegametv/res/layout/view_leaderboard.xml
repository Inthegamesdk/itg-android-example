<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|top">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layoutDirection="inherit">
        <TextView
            android:id="@+id/tvMy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="MY"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/yellowITG" />
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4dp"
            android:text="LEADERBOARD"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="13dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/photoView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="12dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvUserPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500 pts | Rank 14"
                android:textSize="12dp"
                android:fontFamily="@font/titilliumweb_semibold"
                android:textColor="@color/yellowITG" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1sp"
        android:background="@color/buttonYellow"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="13dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvHeaderRank"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Rank"
                android:textSize="7dp"
                android:fontFamily="@font/titillium"
                android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="Name"
            android:textSize="7dp"
            android:fontFamily="@font/titillium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvHeaderPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:text="Points"
            android:textSize="7dp"
            android:fontFamily="@font/titillium"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:focusable="true"
        android:nextFocusUp="@id/recyclerView"
        android:nextFocusDown="@id/recyclerView" />
</LinearLayout>