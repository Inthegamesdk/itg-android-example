<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sidebarBackground"
    android:gravity="center_horizontal|top">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginVertical="10dp"
            android:layoutDirection="inherit"
            app:layout_constraintEnd_toStartOf="@+id/ib_refresh_panel"
            app:layout_constraintStart_toEndOf="@+id/ib_close_panel"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvMy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/titilliumweb_bold"
                android:text="MY"
                android:textColor="@color/yellowITG"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="4dp"
                android:fontFamily="@font/titilliumweb_bold"
                android:text="LEADERBOARD"
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_close_panel"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="6dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:contentDescription="@string/close_sidebar"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_close_panel"
            app:layout_constraintBottom_toBottomOf="@+id/ib_refresh_panel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ib_refresh_panel" />

        <ImageButton
            android:id="@+id/ib_refresh_panel"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="end"
            android:layout_marginEnd="6dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/refresh"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_refresh"
            app:layout_constraintBottom_toBottomOf="@+id/ll_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/ll_tv" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="13dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/photoView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginEnd="4dp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="John Doe"
                android:textSize="12sp"
                android:fontFamily="@font/titilliumweb_regular"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/tvUserPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1500 pts | Rank 14"
                android:textSize="12sp"
                android:fontFamily="@font/titilliumweb_semibold"
                android:textColor="@color/yellowITG" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/sidebar_separator"
        android:layout_marginHorizontal="10dp"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="13dp"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/tvHeaderRank"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/titilliumweb_regular"
            android:text="Rank"
            android:textColor="@android:color/white"
            android:textSize="7sp" />

        <TextView
            android:id="@+id/tvHeaderName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="Name"
            android:textSize="7sp"
            android:fontFamily="@font/titilliumweb_regular"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tvHeaderPoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:text="Points"
            android:textSize="7sp"
            android:fontFamily="@font/titilliumweb_regular"
            android:textColor="@android:color/white" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:nextFocusUp="@id/recyclerView"
            android:nextFocusDown="@id/recyclerView" />

        <ProgressBar
            android:id="@+id/loadingIndicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:indeterminateTint="@android:color/white"
            android:visibility="gone"
            tools:visibility="visible" />
    </FrameLayout>
</LinearLayout>