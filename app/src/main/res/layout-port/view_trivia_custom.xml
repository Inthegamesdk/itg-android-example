<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:layout_marginLeft="8dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/custom_background"
        android:layoutDirection="ltr"
        android:layout_gravity="bottom"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/mainButton"
            android:orientation="horizontal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:layout_margin="10dp"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:background="@drawable/button_circle_selector"
            android:gravity="center"
            android:focusable="true"
            android:nextFocusLeft="@id/mainButton"
            android:nextFocusDown="@id/mainButton"
            android:nextFocusUp="@id/mainButton">

            <ProgressBar
                android:id="@+id/loadingIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminateTint="@android:color/white"
                android:visibility="gone"/>
            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/close"
                android:scaleType="centerInside"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/errorIcon"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginBottom="1dp"
                android:src="@drawable/ic_server_error"
                android:scaleType="centerInside"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/timerView"
                android:orientation="vertical"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="2dp"
                android:tint="@android:color/white"
                android:scaleType="centerInside"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:visibility="visible">
                <TextView
                    android:id="@+id/timerText"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="45m"/>
                <TextView
                    android:id="@+id/timerText2"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:fontFamily="monospace"
                    android:textSize="6sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:text="SEC"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/pointsView"
                android:orientation="vertical"
                android:layout_width="36dp"
                android:layout_height="22dp"
                android:tint="@android:color/white"
                android:gravity="center"
                android:layout_gravity="center"
                android:focusable="true"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:visibility="gone">
                <TextView
                    android:id="@+id/totalText"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:textSize="7sp"
                    android:textStyle="bold"
                    android:textColor="@color/yellowITG"
                    android:text="TOTAL"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/pointsText"
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:layout_marginBottom="2dp"
                        android:textSize="7sp"
                        android:textStyle="bold"
                        android:textColor="@color/yellowITG"
                        android:text="3200,5"/>
                <TextView
                    android:id="@+id/ptsText"
                    android:layout_width="wrap_content"
                    android:layout_height="10dp"
                    android:textAlignment="center"
                    android:layout_marginStart="1dp"
                    android:gravity="center"
                    android:textSize="4sp"
                    android:textStyle="bold"
                    android:textColor="@color/yellowITG"
                    android:text="pts"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center">
            <LinearLayout
                android:id="@+id/questionContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:gravity="center"
                android:visibility="visible">
                <TextView
                    android:id="@+id/tvQuestion"
                    android:layout_width="match_parent"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="2dp"
                    android:paddingTop="2dp"
                    android:textAlignment="textStart"
                    android:textSize="9sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"
                    android:maxLines="1"
                    android:text="question"/>

                <LinearLayout
                    android:id="@+id/container"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:gravity="fill_horizontal"
                    android:layout_height="24dp" >
                    <TextView
                        android:id="@+id/tvResult"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginRight="2dp"
                        android:paddingTop="3dp"
                        android:textAlignment="textStart"
                        android:textSize="9sp"
                        android:textStyle="bold"
                        android:textColor="@color/yellowITG"
                        android:maxLines="1"
                        android:layout_gravity="center_vertical"
                        android:text="Answer result"
                        android:visibility="gone"/>
                </LinearLayout>

                <HorizontalScrollView
                    android:id="@+id/scroller"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:visibility="gone">
                    <LinearLayout
                        android:id="@+id/scrollContainer"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:gravity="fill_horizontal"
                        android:layout_height="match_parent" />
                </HorizontalScrollView>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/flipContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:background="@color/flipPromotionBackgroundColor"
                android:visibility="gone"
                android:gravity="center">
            </LinearLayout>
            <LinearLayout
                android:id="@+id/errorContainer"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="2dp"
                android:visibility="gone"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/tvError"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textAlignment="textStart"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    android:textColor="@color/yellowITG"
                    android:layout_gravity="center_vertical"
                    android:text="An error occurred and your answer was lost on the web.\nTry again next time." />
            </LinearLayout>
        </FrameLayout>

        <ImageButton
            android:id="@+id/smallCloseButton"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:padding="5dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="4dp"
            android:src="@drawable/close"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:background="@drawable/button_circle_focus_selector"
            android:focusable="true"
            android:layout_gravity="top"/>
    </LinearLayout>
</LinearLayout>