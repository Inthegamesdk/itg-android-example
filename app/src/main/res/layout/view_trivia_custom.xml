<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clAnswerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/slip_tv_lift_top"
    android:animateLayoutChanges="true"
    android:orientation="horizontal"
    tools:layout_height="86dp">

    <HorizontalScrollView
        android:id="@+id/scroller"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/scrollContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="fill_horizontal|center_vertical"
            android:layoutDirection="inherit"
            android:orientation="horizontal" />
    </HorizontalScrollView>


    <HorizontalScrollView
        android:id="@+id/hsAnswersScroller"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible">

        <FrameLayout
            android:id="@+id/flAnswers"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="true">

            <LinearLayout
                android:id="@+id/llAnswers"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="12dp"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/llWrongAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="32dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingHorizontal="3dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clLogoContainerWrong"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:id="@+id/ivIconWrong"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:src="@drawable/itg_icon" />

                        <ImageView
                            android:id="@+id/ivCheckmarkWrongLogo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end|bottom"
                            android:layout_marginBottom="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_incorrect_answer"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:visibility="visible" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <FrameLayout
                        android:id="@+id/flWrongAnswerTrivia"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:minWidth="50dp"
                        android:minHeight="0dp">

                        <TextView
                            android:id="@+id/tvTitleWrong"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/button_answer_kidoodle_rounded_selector"
                            android:fontFamily="@font/titilliumweb_semibold"
                            android:gravity="center"
                            android:maxLines="1"
                            android:minWidth="50dp"
                            android:paddingHorizontal="10dp"
                            android:text="Salah"
                            android:textColor="@android:color/white"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/ivCheckmarkWrong"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end|bottom"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_incorrect_answer"
                            android:visibility="gone"
                            tools:visibility="visible" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCorrectAnswer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start|center_vertical"
                    android:orientation="horizontal"
                    android:paddingHorizontal="3dp">


                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/clLogoContainerCorrect"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="12dp">

                        <ImageView
                            android:id="@+id/ivIconCorrect"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_horizontal"
                            android:adjustViewBounds="true"
                            android:padding="2dp"
                            android:scaleType="fitCenter"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:src="@drawable/itg_icon" />

                        <ImageView
                            android:id="@+id/ivCheckmarkCorrectLogo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end|bottom"
                            android:layout_marginBottom="2dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_correct_answer"
                            android:visibility="gone"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            tools:visibility="visible" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <FrameLayout
                        android:id="@+id/flCorrectAnswerTrivia"
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:minWidth="50dp"
                        android:minHeight="0dp">

                        <TextView
                            android:id="@+id/tvTitleCorrect"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="12dp"
                            android:background="@drawable/button_answer_kidoodle_rounded_selector"
                            android:fontFamily="@font/titilliumweb_semibold"
                            android:gravity="center"
                            android:maxLines="1"
                            android:minWidth="50dp"
                            android:paddingHorizontal="10dp"
                            android:text="Salah"
                            android:textColor="@android:color/white"
                            android:textSize="13sp"
                            android:textStyle="normal" />

                        <ImageView
                            android:id="@+id/ivCheckmarkCorrect"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="end|bottom"
                            android:scaleType="fitCenter"
                            android:src="@drawable/ic_correct_answer"
                            android:visibility="gone"
                            tools:visibility="visible" />

                    </FrameLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llCorrectResult"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/llAnswers"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:visibility="visible">

                    <TextView
                        android:id="@+id/tvCorrectMsg"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/titilliumweb_bold"
                        android:gravity="center"
                        android:text="GOOD JOB!"
                        android:textColor="#ffffff"
                        android:textFontWeight="1000"
                        android:textSize="22sp"
                        android:textStyle="bold" />


                    <LinearLayout
                        android:id="@+id/pointsBadge"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="start|center_vertical"
                        android:layout_marginStart="12dp"
                        android:gravity="center"
                        android:orientation="horizontal"
                        tools:visibility="visible">


                        <ImageView
                            android:id="@+id/pointsBadgeIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="15dp"
                            android:adjustViewBounds="true"
                            android:src="@drawable/coin2" />

                        <TextView
                            android:id="@+id/pointsBadgeLabel"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="4dp"
                            android:fontFamily="@font/titilliumweb_regular"
                            android:gravity="center"
                            android:lineSpacingMultiplier="0.6"
                            android:text="+100"
                            android:textColor="@android:color/white"
                            android:textSize="14sp" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

        </FrameLayout>


    </HorizontalScrollView>

    <ProgressBar
        android:id="@+id/loadingIndicator"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:indeterminateTint="@android:color/white"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>