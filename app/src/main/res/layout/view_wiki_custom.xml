<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mainContainer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="204dp"
    android:layout_gravity="bottom"
    android:gravity="bottom"
    android:layout_marginLeft="50dp">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:background="@color/custom_background"
        android:layoutDirection="ltr"
        android:layout_gravity="bottom"
        android:gravity="center">
        <LinearLayout
            android:id="@+id/mainButton"
            android:orientation="horizontal"
            android:layout_width="58dp"
            android:layout_height="58dp"
            android:padding="10dp"
            android:layout_margin="13dp"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:background="@drawable/button_circle_selector"
            android:gravity="center"
            android:focusable="true"
            android:nextFocusLeft="@id/mainButton"
            android:nextFocusDown="@id/mainButton"
            android:nextFocusUp="@id/mainButton">

            <ImageView
                android:id="@+id/closeIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/close"
                android:scaleType="centerInside"/>
        </LinearLayout>


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:layoutDirection="locale"
                android:textDirection="locale"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:gravity="center">

                <ScrollView
                    android:id="@+id/scroller"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fillViewport="true"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:nextFocusUp="@id/scroller">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">
                    <TextView
                        android:id="@+id/tvContent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:textAlignment="textStart"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"
                        android:text="question"/>
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>

        <LinearLayout
            android:id="@+id/extraInfoContainer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/tvCredits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="120"/>
            <TextView
                android:id="@+id/tvExPoints"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="5040"/>

            <TextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:text="6"/>
            <Button
                android:id="@+id/userAreaButton"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@android:color/white"
                android:text="User Area" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/smallCloseButton"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/close"
            android:tint="@android:color/white"
            android:scaleType="centerInside"
            android:background="@drawable/button_circle_focus_selector"
            android:focusable="true"
            android:layout_gravity="top"/>
    </LinearLayout>
</LinearLayout>